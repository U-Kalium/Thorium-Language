{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "cargo test --package thorium-language --bin thorium-language -- compiler::parser::scratch_pad --exact --nocapture",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}/thorium-language"
			},
			"label": "rust: cargo test"
		}
	]
}